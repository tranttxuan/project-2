<div class="big-container product-manage-wrapper flexed-item">
    <form method="post" action="/dashboard/product-edit/{{beer._id}}" class="edit-product-form">
        <h3 class="form-title"> Edit Bears</h3>
        <div class="form-item-wrapper flexed-item">
            <label for="beer-name" class="label-name label">Beer name</label>
            <input id="beer-name" type="text" value="{{beer.name}}" class="input-text input" name="name">
        </div>
        <div class="form-item-wrapper flexed-item">
            <label for="beer-descr" class="label-descr label">Description</label>
            <input id="beer-descr" type="text" value="{{beer.descr}}" class="input-text input" name="description">
        </div>
        <div class="form-item-wrapper flexed-item">
            <label for="beer-price" class="label-price label">Price</label>
            <input id="beer-price" type="number" value="{{beer.price}}" class="beer-price input">
        </div>
        <div class="form-item-wrapper flexed-item">
            <label for="beer-main-cat" class="label-main-cat label">Main category</label>
            <select id="main_category" class="select" required name="category">
                <option value="-1" disabled selected>Choose main Category...</option>
                <option value="Pilsner">Pilsner</option>
                <option value="Dunkel">Dunkel</option>
                <option value="Ale">Ale</option>
                <option value="Lager">Lager</option>
                <option value="Wheat">Wheat</option>
                <option value="Stout">Stout</option>
                <option value="Porter">Porter</option>
                <option value="Porter">Porter</option>
            </select>
        </div>

        <button class="button-primary add-beer-btn">Edit this beer</button>
    </form>
</div>