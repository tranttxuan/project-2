<div class="big-container product-manage-wrapper flexed-item">
    <form action="/dashboard/product-add" method="post" class="add-product-form">
        {{!-- <form action="/prod-add" method="post" class="add-product-form"> --}}
        <h3 class="form-title">Add bears to the collection</h3>
        <div class="form-item-wrapper flexed-item">
            <label for="bear-name" class="label-name label">bear name</label>
            <input id="bear-name" type="text" class="input-text input" name="name">
        </div>
        <div class="form-item-wrapper flexed-item">
            <label for="bear-descr" class="label-descr label">Description</label>
            <input id="bear-descr" type="text" class="input-text input" placeholder="The best bear for drink"
                value="foo bar baz" name="description">
        </div>
        <div class="form-item-wrapper flexed-item">
            <label for="bear-price" class="label-price label">Price</label>
            <input id="bear-price" type="number" class="bear-price input" value="5" name="price">
        </div>
        <div class="form-item-wrapper flexed-item">
            <label for="bear-quantity" class="label-price label">quantity</label>
            <input id="bear-quantity" type="number" class="bear-quantity input" value="50" name="quantity">
        </div>
        <div class="form-item-wrapper flexed-item">
            <label for="bear-img" class="label-price label">Image</label>
            <input id="bear-img" type="file" class="bear-price input" name="image">
        </div>
        <div class="form-item-wrapper flexed-item">
            <label for="category" class="label-main-cat label">Main category</label>
            <select id="category" class="select" required name="category">
                <option value="-1" disabled selected>Choose a category</option>
                <option value="Pilsner">Pilsner</option>
                <option value="Dunkel">Dunkel</option>
                <option value="Ale">Ale</option>
                <option value="Lager">Lager</option>
                <option value="Wheat">Wheat</option>
                <option value="Stout">Stout</option>
                <option value="Porter">Porter</option>
                <option value="Porter">Porter</option>
            </select>
        </div>

        <div class="form-item-wrapper flexed-item">
            <label for="tags" class="label">Tags</label>
        </div>
        <button class="button-primary add-bear-btn">Add to collection</button>
    </form>

</div>